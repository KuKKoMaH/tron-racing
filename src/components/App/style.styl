@font-face
  font-family: 'helveticaneue'
  src: url('../../static/fonts/helveticaneue.woff2') format('woff2'),
          url('../../static/fonts/helveticaneue.woff') format('woff'),
          url('../../static/fonts/helveticaneue.ttf') format('truetype')
  font-weight: normal
  font-style: normal

html, body
  padding: 0
  margin: 0
  height: 100%

html
  position: relative
  font-family: 'helveticaneue', sans-serif

body
  background: c-basestar


*, *:before, *:after
  box-sizing: border-box

:global #root
  display: inline

.wrapper
  width: 100%
  height: 100%
  text-align: center
  white-space: nowrap

  &:before
    content: ''
    display: inline-block
    vertical-align: middle
    height: 100%

.content
  display: inline-block
  vertical-align: middle
  white-space: normal